import org.junit.Test;

public class MainClassTest extends MainClass
{
    @Test
    public void testGetLocalNumber() {
        MainClass instance = new MainClass();
        int result = instance.giveMeInt();

        if (result != 14) {
            System.out.println("Failed: no 14 in result");
        }
        else {
            System.out.println("Passed, we got 14");
        }
    }
@Test
    public void testGetClassNumber() {
        MainClass mainClass = new MainClass();
        int value = mainClass.getClassNumber();
        if (value > 45) {
            System.out.println("Test passed, number > 45 ");
        } else {
            System.out.println("Test failed, number < 45 ");
        }
    }
@Test
    public void testGetClassString() {
        MainClass mainClass = new MainClass();
        String result = mainClass.getClassString();
        if (!result.contains("hello") && !result.contains("Hello")) {
            System.out.println("Failed");
        } else {
            System.out.println("Passed");
        }
    }
}
